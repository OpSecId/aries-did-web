<html lang="en">
{% include 'layouts/head.jinja' %}

<body class=" d-flex flex-column">
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="." class="navbar-brand navbar-brand-autodark">
                </a>
            </div>
            <div class="card-md">
                <div class="card-body">
                    {# <h2 class="h2 text-center mb-4">Create a new DID</h2> #}
                    <form method="post">
                        {{ form.hidden_tag() }}
                        <div class="modal-body">
                            <div class="form-floating mb-3">
                                {{ form.name(class='form-control', id="floating-input") }}
                                {{ form.name.label(class='form-label', for="floating-input") }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form.scope(class='form-control', id="floating-input") }}
                                {{ form.scope.label(class='form-label', for="floating-input") }}
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form.submit(class='btn w-100') }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="{{ url_for('static', filename='js/tabler.min.js') }}" defer=""></script>

</body>

</html>