<div id="modal-issue-credential" class="modal modal-blur fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Credential</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                {{ issue_credential_form.hidden_tag() }}
                <div class="modal-body">
                    <div class="mb-3">
                        {{ issue_credential_form.type.label(class='form-label required') }}
                        {{ issue_credential_form.type(class='form-select') }}
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                {{ issue_credential_form.entity_id.label(class='form-label required') }}
                                {{ issue_credential_form.entity_id(class='form-control') }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                {{ issue_credential_form.title_no.label(class='form-label required') }}
                                {{ issue_credential_form.title_no(class='form-control') }}
                            </div>
                        </div>
                    </div>
                </div> 
                <div class="modal-footer">
                    {{ issue_credential_form.submit(class='btn btn-primary ms-auto')  }}
                </div>
            </form>
        </div>
    </div>
</div>