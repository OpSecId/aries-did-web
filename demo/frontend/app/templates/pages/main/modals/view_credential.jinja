<div id="modal-view-credential" class="modal modal-blur fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">View Credential</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                {{ view_credential_form.hidden_tag() }}
                <div class="modal-body">
                    <div class="mb-3">
                        {{ view_credential_form.credential_id.label(class='form-label required') }}
                        {{ view_credential_form.credential_id(class='form-control') }}
                    </div>
                </div>
                <div class="modal-footer">
                    {{ view_credential_form.submit(class='btn btn-primary ms-auto')  }}
                </div>
            </form>
        </div>
    </div>
</div>